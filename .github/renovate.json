{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "labels": [
        "renovate",
        "patch-update"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "renovate",
        "minor-update"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "renovate",
        "major-update"
      ],
      "dependencyDashboardApproval": true
    }
  ],
  "dependencyDashboardLabels": [
    "renovate"
  ],
  "prConcurrentLimit": 2,
  "automergeType": "pr",
  "platformAutomerge": true
}
